<h1>Created Events</h1>

<ul>
<% @events.each do |event| %>
  <li style="list-style:none">
    <h2><%= event.name %></h2>
    <h3><%= event.place %></h2>
    <h3><%= event.event_date %></h2>
  </li>
<% end %>
</ul>

<h1>Attended Events</h1>
<h2>Past Events:</h2>
<ul>
<% @past.each do |event| %>
  <li style="list-style:none">
    <h2><%= link_to event.name, event_path(event.id) %></h2>
  </li>
<% end %>
</ul>


<h2>Upcoming Events:</h2>

<% @future.each do |event| %>
  <li style="list-style:none">
    <h2><%= link_to event.name, event_path(event.id) %></h2>
  </li>
<% end %>
</ul>

<%= link_to "Home", :root %>